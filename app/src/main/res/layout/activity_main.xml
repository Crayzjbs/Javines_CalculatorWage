<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ui2" />

    <TextView
        android:id="@+id/empType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Select from the options below"
        android:textColor="#37250A"
        app:layout_constraintEnd_toEndOf="@+id/txtHours"
        app:layout_constraintHorizontal_bias="0.608"
        app:layout_constraintStart_toStartOf="@+id/txtHours"
        app:layout_constraintTop_toBottomOf="@+id/txtHours" />

    <Button
        android:id="@+id/btnCal"
        android:layout_width="196dp"
        android:layout_height="94dp"
        android:layout_marginBottom="76dp"
        android:backgroundTint="#ef7716"
        android:fontFamily="@font/big_noodle_titling"
        android:text="Calculate"
        android:textColor="#37250A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/txtHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/big_noodle_titling"
        android:hint="Rendered Hours"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="#37250A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.276" />

    <EditText
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/big_noodle_titling"
        android:hint="Insert name please"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="#37250A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.043" />

    <RadioGroup
        android:id="@+id/employeeType"
        android:layout_width="196dp"
        android:layout_height="148dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/empType"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/empType"
        app:layout_constraintTop_toBottomOf="@+id/empType">

        <RadioButton
            android:id="@+id/txtFT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/big_noodle_titling"
            android:text="Full-time"
            android:textColor="#37250A" />

        <RadioButton
            android:id="@+id/txtPT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/big_noodle_titling"
            android:text="Part-time"
            android:textColor="#37250A" />

        <RadioButton
            android:id="@+id/txtProb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/big_noodle_titling"
            android:text="Probationary "
            android:textColor="#37250A" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/big_noodle_titling"
        android:text="WAGE CALCULATOR"
        android:textColor="#37250A"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>